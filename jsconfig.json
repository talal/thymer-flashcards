{
    "compilerOptions": {
        "checkJs": true,
        "allowJs": true,
        "strict": true,
        "declaration": true,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "*.js",
        "*.ts",
        "*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}